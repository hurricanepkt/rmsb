---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <a href="https://russianmachineneverbreaks.com/"><h1 class="post-title">{{ page.title }}</h1></a>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <a href="https://russianmachineneverbreaks.com/">
  <article>
    {{ content }}
  </article>
  </a>
  
  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
